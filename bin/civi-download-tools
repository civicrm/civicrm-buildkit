      sudo add-apt-repository -y ppa:ondrej/php
      sudo curl -sL https://deb.nodesource.com/setup_14.x | sudo -E bash - # This runs sudo apt update so there's no point running it twice.
      sudo apt-get -y install $PACKAGES
